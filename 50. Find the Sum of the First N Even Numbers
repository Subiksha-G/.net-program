using System;

class Program
{
    static void Main()
    {
        Console.Write("Enter the value of N: ");
        int n = Convert.ToInt32(Console.ReadLine());
        int sum = 0;

        for (int i = 2; i <= n * 2; i += 2)
        {
            sum += i;
        }

        Console.WriteLine($"Sum of the first {n} even numbers is {sum}");
    }
}
