using System;

class Program
{
    static void Main()
    {
        Console.Write("Enter a number: ");
        int num = Convert.ToInt32(Console.ReadLine());
        int sum = 0;

        for (int i = 1; i < num; i++)
        {
            if (num % i == 0)
                sum += i;
        }

        Console.WriteLine(sum == num ? $"{num} is a perfect number." : $"{num} is not a perfect number.");
    }
}
